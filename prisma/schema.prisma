// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = env("DATABASE_URL")
}

model Product {
  id           String      @id
  title        String
  price        Int
  image        String
  colors       String 
  description  String
  manufacturer String
  category     String
  sale         Int
}

model ProductLiked {
  id           String      @id
  title        String
  price        Int
  image        String
  colors       String 
  description  String
  manufacturer String
  category     String
  sale         Int
}